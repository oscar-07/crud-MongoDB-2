<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar nota</h3>
        </div>
        <div class="card-body">
            <form action="/notas/editar-nota/{{nota._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="titulo" class="form-control" placeholder="Titulo" value="{{nota.titulo}}">
                </div>
                <div class="form-group">
                    <textarea name="descripcion" class="form-control">
                        {{nota.descripcion}}
                    </textarea>
                </div>
                <div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">
                            Guardar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>